<?xml version="1.0" encoding="windows-1251"?>
<fileroot>
	<script name="onLoad">
    switch = "off";
    SendMessage("messageWindow" , "Что-то здесь совсем темно, может включим свет?" );
    vent = "closed";
    shkaf = "locked";
    toolboxfaze = "one";
    box = "faze1";
    inHand = "None";
    bullfinch = "one";
    broom = "one";
    bucket = "one";
  </script>
	<StaticTexture x="0" y="0" texture="fon_closet"/>
 <Mask x="677" y="61" texture="switch_mask"> <!-- тап на выключатель-->
		<script>
				if switch == "on" then
					switch = "off";
          SendMessage("messageWindow" , "Ой, как темно в чулане, может включим свет?" );
				else
					switch = "on";
                    bullfinch = "two"
	   	  SendMessage("messageWindow" , "Ура! Вот и ведро с метлой" );
				end
		</script>
 </Mask>
 <MultiTexture variableName="bullfinch"> <!-- снегирь -->
		<states>
			<if value="one" x="0" y="0" texture="bullfinch_closet"/>
			<if value="two" x="0" y="0" texture="bullfinch2_closet"/>
		</states>
		<!--
	  <script>
	  if (bullfinch == "one") then
       bullfinch = "two"
      else
        SendMessage("messageWindow" , "А вот и пуговицы!" )
      end
    </script>
     -->
   </MultiTexture>
   <MultiTexture variableName="broom">  <!-- метла -->
		<states>
			<if value="one" x="0" y="0" texture="broom_closet"/>
			<if value="two" x="0" y="0" texture="broom_closet_mask"/>
		</states>
		<script>
      if (broom == "one") then
        broom = "two"
      end
      </script>
   </MultiTexture>
   <MultiTexture variableName="bucket">  <!-- ведро -->
		<states>
			<if value="one" x="0" y="0" texture="bucket_closet"/>
			<if value="two" x="382" y="227" texture="bucket_closet_mask"/>
		</states>
		<script>
		if (bucket == "one") then
        bucket = "two"
      end
      </script>
   </MultiTexture>
	<MultiTexture variableName="switch">
		<states>
			<if value="off" x="0" y="0" texture="dark_closet"/>
		</states>
	</MultiTexture>
	<TextBox name="messageWindow" x="500" y="695" width="600" height="50" font="data\a_futuraRound_24.fnt" hideTime="2.5">
    <background texture="textback1" x="0" y="0"/>
	</TextBox>
      <IButton name="new" x="0" y="0" width="40" height="40" caption="Reload">
        SendMessage("Core", "load xml start.xml");
      </IButton>
	<FpsCounter/>
</fileroot>






